<script>
    var viewModel = {
        registerList: ko.observableArray([
            {"StudentId": "..."}
        ])
    };
    var odometer = document.getElementById("odometer");
    var smallCounter = document.getElementById("counter-small");
    var fuerRootRef = new Firebase('https://fuerdb.firebaseio.com/');
    var regRef = fuerRootRef.child('Registers');

    var countRef = fuerRootRef.child('RegisterCount');
    countRef.once('value', function (snapshot) {
        odometer.innerHTML = snapshot.child('Count').val();
        smallCounter.innerHTML = snapshot.child('Count').val();
    });
    ko.applyBindings(viewModel);

    var regListQuery = regRef.limit(8);
    regListQuery.once('value', function (snapshot) {
        snapshot.forEach(function (aReg) {
            viewModel.registerList.splice(0, 0, aReg.val());
        });

    });

    countRef.on('child_changed', function (snapshot) {
        var num = snapshot.val();
        odometer.innerHTML = num;
        smallCounter.innerHTML = num;
        regListQuery = regRef.limit(1);
        regListQuery.once('child_added', function (snap) {
            viewModel.registerList.splice(0, 0, snap.val());
            if (viewModel.registerList.length > 8) {
                viewModel.registerList = viewModel.registerList.remove(viewModel.registerList()[viewModel.registerList().length - 2 ]);
            }
        });

    });

    var navBar = document.getElementById("nav-bar");
    window.onscroll = displayNav;

    function displayNav() {
        var value = window.pageYOffset;
        if (value > 145) {
            navBar.style.opacity = 1;
            $('#containerFixMenu').css({opacity: 1});
        } else {
            navBar.style.opacity = 0;
            $('#containerFixMenu').css({opacity: 0});
        }
    }
</script>
